<h3>Add a new recipe</h3>
<form action="" method="post">
  <fieldset>
    <label for="title">Title</label>
    <input type="text" name="title"  id="title"/>
    <label for="author">Author</label>
    <input type="text" name="author" id="author"/>
    <label>
      Type
      <select name="type">
        <option value="" disabled selected>Choose one</option>
        <option value="breakfast">Breakfast</option>
        <option value="lunch">lunch</option>
        <option value="dinner">dinner</option>
      </select>
    </label>
    <label for="ingredient_list">Ingredients</label>
    <input type="text" name="ingredient_list" id="ingredient_list"/>
    <label for="steps">Steps</label>
    <input type="text" name="steps" id="steps"/>
    <label for="nutrition">Nutrition Facts</label>
    <input type="text" name="nutrition" id="nutrition"/>
    <label>
      Difficulty
      <select name="difficulty">
        <option value="" disabled selected>Choose one</option>
        <option value="easy">Easy</option>
        <option value="medium">Medium</option>
        <option value="hard">Hard</option>
      </select>
    </label>
    <label for="nutrition">Nutrition Facts</label>
    <input type="text" name="nutrition" id="nutrition"/>
    <label for="servings">Servings</label>
    <input type="number" name="servings" id="servings" min="0"/>
    <label for="time">Total Time to Finish</label>
    <input type="number" name="time" id="time" min="0"/>
    <input type="hidden" id="timestamp" name="timestamp" value="1286705410">
    <label for="url_link">Link to recipe on other website</label>
    <input type="text" name="url_link" id="url_link"/>
  </fieldset>
  <button type="submit">Add recipe</button>
  <button type="reset">Reset form</button>
</form>