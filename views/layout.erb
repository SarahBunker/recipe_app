<!doctype html>
<html lang="en-US">
  <head>
    <title>Recipe App</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
    <!--<script src="/javascripts/jquery-2.1.4.js"></script>-->
    <!--<script src="/javascripts/application.js"></script>-->
  </head>
  <body>
    <header>
      <h1>Recipe App</h1>
      <div class="actions">
        <%== yield_content :header_links %>
      </div>
    </header>

    <% if session[:error] %>
      <div class="flash error">
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>

    <% if session[:success] %>
      <div class="flash success">
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>

    <main>
      <div class="nav_bar">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/new_recipe">Add Recipe</a></li>
          <li><a href="/calender">Calender</a></li>
          <li><a href="/favorites">Favorites</a></li>
        </ul>
      </div>
      <%== yield %>
    </main>
  </body>
</html>
