<h2>Search</h2>

<form action="/search" method="get">
  <input name="query" value="<%= params[:query] %>"/>
  <button type="submit">Search</button>
</form>

<% if @recipes.empty? %>
  <p>Sorry, no matches were found.</p>
<% else %>
  <h2>recipes for '<%= params[:query]%>'</h2>

  <ul>
    <% @recipes.each do |recipe| %>
      <li>
        <h4><%= recipe[:name] %></h4>
        <!-- FIXME -->
      </li>
    <% end %>
  </ul>
<% end %>
