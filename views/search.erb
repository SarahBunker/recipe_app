<h2>Search</h2>

<form action="/search" method="get">
  <input name="query" value="<%= params[:query] %>"/>
  <button type="submit">Search</button>
</form>

<% if @results.empty? %>
  <p>Sorry, no matches were found.</p>
<% else %>
  <h2>Results for '<%= params[:query]%>'</h2>

  <ul>
    <% @results.each do |result| %>
      <li>
        <h4><%= result[:name] %></h4>
        #FIX ME
      </li>
    <% end %>
  </ul>
<% end %>
